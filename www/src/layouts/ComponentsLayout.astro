---
import SubNav from "@/components/SubNav.astro"
import Breadcrumb from "@/components/ui/Breadcrumb.astro"

const navItems = [
  { name: "Range", href: "/components/range" },
  { name: "Stepper", href: "/components/stepper" },
]
---

<div
  class="container px-4 md:px-6 flex-1 pt-6 pb-20 items-start md:grid lg:grid-cols-[240px_minmax(0,1fr)] lg:gap-10"
>
  <SubNav title="Components" navItems={navItems} />
  <div class="relative lg:grid grid-cols-full xl:grid-cols-[1fr_300px]">
    <div class="mx-auto w-full min-w-0">
      <Breadcrumb />
      <slot />
    </div>
  </div>
</div>
