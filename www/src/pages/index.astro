---
import ExampleComponent from "@/components/example-component"
import BaseLayout from "@/layouts/BaseLayout.astro"
import { Button } from "@/components/ui/button"
import Link from "@/components/ui/Link.astro"
import { Icon } from "astro-icon/components"

export const tools = [{
  name: "next-auth-template",
  description: "A template for Next.js with NextAuth, Drizzle ORM, and Tailwind CSS.",
  icons: ["logos/nextjs", "logos/authjs"],
  slug: "next-auth-template"
}]

const componentExamples = ["stepper", "range"]
---

<BaseLayout
  title="Playground"
  description="Free components and rides from Jake Holman (@jakeisonline)."
>
  <div class="w-full">
    <div class="w-full lg:mt-8 mt-4">
      <h1>
        <span class="flex items-center 2xl:text-8xl duration-700 lg:text-6xl md:text-5xl text-3xl tracking-tight xl:text-7xl">üõù Free components</span>
        <span class="md:text-2xl text-base text-muted-foreground">and other fun stuff for your projects</span>
      </h1>
    </div>
    <div class="mt-3 mb-8 gap-1.5 flex flex-col md:flex-row">
      <Link href="/playground/installing-components" noStyle>
        <Button className="w-full md:w-auto">
          Get started
        </Button>
      </Link>
      <Link href="/playground/components" noStyle>
        <Button className="w-full md:w-auto" variant="secondary">
          See all
        </Button>
      </Link>
    </div>
    <div class="grid lg:grid-cols-2 gap-3 mt-3 not-prose">
      {
        componentExamples.map((componentExample) => (
          <ExampleComponent
            name={componentExample}
            inclSource={false}
            client:load
          />
        ))
      }
    </div>

    <h2 class="text-2xl font-medium mt-8">Tools</h2>
    <p class="text-muted-foreground">A growing collection of tools for web development, that you might find handy.</p>
    <div class="grid lg:grid-cols-3 gap-3 mt-3 not-prose mb-20">
      {
        tools.map((tool) => (
          <a href={`/playground/tools/${tool.slug}`}>
            <div class="bg-card text-card-foreground rounded-lg border shadow-sm">
      <div class="flex flex-col min-h-22 w-auto p-6 pt-6">
        <div class="flex items-center gap-2 pb-3">
          {
            tool.icons.map((icon) => (
              <Icon name={icon} class="w-8 h-8" />
            ))
          }
        </div>
        <h3 class="text-lg font-medium">{tool.name}</h3>
        <p class="text-sm text-muted-foreground">{tool.description}</p>
      </div>
    </div>
          </a>
        ))
      }
    </div>
</BaseLayout>
