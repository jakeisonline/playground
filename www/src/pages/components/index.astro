---
import ExampleComponent from "@/components/example-component"
import Link from "@/components/ui/Link.astro"
import DocsLayout from "@/layouts/DocsLayout.astro"
import { getCollection } from "astro:content"

const componentPages = await getCollection("components")
---

<DocsLayout
  title="Playground - Components"
  description="Free components and rides from Jake Holman (@jakeisonline)."
>
  <div
    class="prose prose-h2:border-b prose-h2:pb-2 prose-headings:tracking-tight prose-h1:text-3xl prose-headings:font-bold prose-h1:mb-0 dark:prose-invert mt-4"
  >
    <h1>Components</h1>
    <p>
      A range of free, accessible, and open-source React components. All of these components are easily
      <Link href="/playground/installing-components">installed via cli</Link> or manually. Go, explore.</Link>
    </p>
    <div class="grid lg:grid-cols-2 gap-3 mt-3 not-prose">
      {
        componentPages.map((page) => (
          <a href={`/playground/components/${page.slug}`}>
            <ExampleComponent
              name={page.data.component}
              inclSource={false}
              isInteractive={false}
              client:load
            />
          </a>
        ))
      }
    </div>
  </div>
</DocsLayout>
